@{
    ViewData["Title"] = "Operacion no autorizada";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Error, el usuario no tiene autorización
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="error-page">
        <h2 class="headline text-red">Error</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i>Sin autorización</h3>
            @if (ViewBag.operacion != "")
            {
                <p>Operación: @ViewBag.operacion </p>
            }
            @if (ViewBag.modulo != "")
            {
                <p>Controlador: @ViewBag.controlador</p>
            }
            @if (ViewBag.msjeErrorExcepcion != "")
            {
                <p>@ViewBag.msjeErrorExcepcion</p>
            }
        </div>
    </div>
    <!-- /.error-page -->
</section>